void caesar_encrypt ( char str1 []  , int n )
{    
     for ( int i = 0 ; i < 4 ; i ++ )
   {
     if ( str1 [ i ] )
     {
          for ( int j = 0 ; j < n ; j ++ )
          {
             if ( str1 [ i ] == 'z' )
              {
               str1[i] = 'a' ;
              }
             else
              { str1 [ i ] ++ ; 
              }
          } 
     }
   }  cout << str1 ;  
     
}
    
